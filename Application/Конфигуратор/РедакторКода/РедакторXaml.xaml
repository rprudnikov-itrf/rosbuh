                           Source="/RosApplication;component/Themes/images/add.png"/>
                </MenuItem.Icon>
                <MenuItem Header="ParamItemControl" Tag="ParamItemControl" />
            </MenuItem>-->
            <MenuItem Header="Выделить" ItemsSource="{Binding ParentItemsSource}" 
                      Click="ВыделитьContextMenu_Click" />
